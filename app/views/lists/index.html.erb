<%- model_class = List -%>
<div class="page-header">
  <h1>Listados</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Esquema</th>
      <th>Columnas</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.id, list_path(list) %></td>
        <td><%= list.name %></td>
        <td><%= list.schema_id %></td>
        <td><%= list.columns %></td>
        <td>
          <div style="width:100%;">
          <%= link_to list_path(list), :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-eye-open white" aria-hidden="true"></span>
          <% end %>
          <%= link_to list_path(list), :class => 'btn btn-info' do %>
            <span class="glyphicon glyphicon-pencil white" aria-hidden="true"></span>
          <% end %>
          <%= link_to list_path(list), :method => :delete, :data => { :confirm => "Esta seguro?" }, :class => 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-trash white" aria-hidden="true"></span>
          <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_list_path, :class => 'btn btn-primary white' do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span>
  Nueva
<% end %>
