<%- model_class = List -%>
<div class="page-header">
  <h1>Listado <%= @list.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @list.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:schema_id) %>:</strong></dt>
  <dd><%= @list.schema_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:columns) %>:</strong></dt>
  <dd><%= @list.columns %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lists_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_list_path(@list), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              list_path(@list),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
