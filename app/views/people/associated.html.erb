<%- model_class = Person -%>
<%= render :partial => "layouts/search", :locals => { :title => "Listado de Socios (#{@people.count})"} %>
<%= link_to new_person_path, :class => 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus white" aria-hidden="true"> </span>
  Nueva
<% end %>

<br/><br/>
<table class="table table-striped header-fixed">
  <thead>
    <tr>
      <th>NroSoc </th> 
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Fec.Nac.</th>
      <th>Edad</th>
      <th>DNI</th>
      <th>Fijo</th>
      <th>Celular</th>
      <th>Beneficio</th>
      <th>V</th>
      <th>****Acciones****</th>
    </tr>
  </thead>
  <tbody class="searchable">
    <% @people.each do |person| %>
      <tr>
        <td><%= person.associated_number == 0 ? "" : person.associated_number %></td>        
        <td><%= person.last_name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.full_address %></td>  
        <td><%= person.dob_formatted %></td>
        <td><%= person.age %></td>   
        <td><%= person.identification %></td>
        <td><%= person.phone %></td>
        <td><%= person.cell_phone %></td>
        <td><%= person.benefit %></td>
        <td><%= person.traveler ? "SI" : "NO" %></td>        
        <td>
          <div style="width:100%;">
            <%= link_to edit_person_path(person), :class => 'btn btn-info' do %>
              <span class="glyphicon glyphicon-pencil white" aria-hidden="true"></span>
            <% end %>
            <%= link_to person_path(person), :method => :delete, :data => { :confirm => "Esta seguro?" }, :class => 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash white" aria-hidden="true"></span>
            <% end %>
             <%= link_to person_path(person), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus white" aria-hidden="true"></span>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
