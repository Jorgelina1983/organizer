<%= form_for @person, :html => { :class => "form-horizontal person" } do |f| %>

  <% if @person.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_name) %>
  </div>
  <div class="form-group">
    <%= f.label :identification, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :identification, :class => 'form-control' %>
    </div>
    <%=f.error_span(:identification) %>
  </div>
  <div class="form-group">
    <%= f.label :benefit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :benefit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:benefit) %>
  </div>
  <div class="form-group">
    <%= f.label :cell_phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cell_phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cell_phone) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone) %>
  </div>
  <div class="form-group">
    <%= f.label :dob, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dob, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dob) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :address_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address_number) %>
  </div>
  <div class="form-group">
    <%= f.label :associated, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :associated, :class => 'form-control' %>
    </div>
    <%=f.error_span(:associated) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                people_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
